---
import Layout from "../layouts/Layout.astro";
import "halfmoon/css/halfmoon.min.css";

interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<div class="container shadow Info-Card">
  <div class="col ms-auto justify-content-center">
    <div class="Card-Image">
      <img src={image} alt={title} />
    </div>

    <p class="Card-Title">{title}</p>
    <p class="Card-Description">{description}</p>
  </div>
</div>

<style>
  

  .Info-Card 
  {
    display: flex;
    flex-direction: column;
    color: var(--text);
    background-color: white;
    align-items: center;
    justify-content: center;

    border-radius: var(--border-radius);
    margin: 50px;
    padding: 50px;
    text-align: center;
    height: 450px; /* Let the height be determined by content */
    max-height: 450px; /* Optional: Set a maximum height */
    width: auto;
  }

  .work-card1 {
    background: #fff;
    box-shadow: 0px 10px 36px rgba(18, 78, 120, 0.08);
    border-radius: 16px;
    padding: 30px 25px;
    text-align: center;
  }

  .work-card-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto;
    margin-bottom: 30px;
  }

  .Card-Image {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-height: 100px;
    width: auto;
    overflow: hidden;
    margin-bottom: 30px;
  }

  .Card-Image > img {
    margin-bottom: 2px; /* Set specific dimensions for the image */
    width: 100px; /* Adjust as needed */
    height: auto; /* Adjust as needed */
    object-fit: contain;
  }

  .Card-Title {
    font-size: 1.5rem;
    font-weight: bolder;
    font-style: italic;
  }

  .Card-Description {
    font-size: 1.25rem;
    font-style: italic;
  }
</style>
